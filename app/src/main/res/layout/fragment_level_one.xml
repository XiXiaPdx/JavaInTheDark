<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blueoxgym.javainthedark.Fragments.LevelOne">

    <!-- TODO: Update blank fragment layout -->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/versesRecycleView"
            android:layout_width="match_parent"
            android:layout_height="413dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="90dp"></android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/songNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/LightGreen"
            android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.007"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/artistTextView"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/LightGreen"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/songNameTextView"
            tools:layout_editor_absoluteX="8dp" />

        <ImageView
            android:id="@+id/levelOneStar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_star_border_white_18dp"
            app:layout_constraintBottom_toTopOf="@+id/versesRecycleView"
            app:layout_constraintTop_toBottomOf="@+id/artistTextView"
            app:layout_constraintRight_toLeftOf="@+id/levelTwoStar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintVertical_bias="0.216" />
        <ImageView
            android:id="@+id/levelTwoStar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_star_border_white_18dp"
            app:layout_constraintBottom_toTopOf="@+id/versesRecycleView"
            app:layout_constraintTop_toBottomOf="@+id/artistTextView"
            app:layout_constraintRight_toLeftOf="@+id/levelThreeStar"
            app:layout_constraintLeft_toRightOf="@+id/levelOneStar"
            app:layout_constraintVertical_bias="0.216" />
        <ImageView
            android:id="@+id/levelThreeStar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_star_border_white_18dp"
            app:layout_constraintBottom_toTopOf="@+id/versesRecycleView"
            app:layout_constraintTop_toBottomOf="@+id/artistTextView"
            app:layout_constraintRight_toLeftOf="@+id/levelFourStar"
            app:layout_constraintLeft_toRightOf="@+id/levelTwoStar"
            app:layout_constraintVertical_bias="0.216" />
        <ImageView
            android:id="@+id/levelFourStar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_star_border_white_18dp"
            app:layout_constraintBottom_toTopOf="@+id/versesRecycleView"
            app:layout_constraintTop_toBottomOf="@+id/artistTextView"
            app:layout_constraintRight_toLeftOf="@+id/levelFiveStar"
            app:layout_constraintLeft_toRightOf="@+id/levelThreeStar"
            app:layout_constraintVertical_bias="0.216" />
        <ImageView
            android:id="@+id/levelFiveStar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_star_border_white_18dp"
            app:layout_constraintBottom_toTopOf="@+id/versesRecycleView"
            app:layout_constraintTop_toBottomOf="@+id/artistTextView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/levelFourStar"
            app:layout_constraintVertical_bias="0.216" />
    </android.support.constraint.ConstraintLayout>

</FrameLayout>

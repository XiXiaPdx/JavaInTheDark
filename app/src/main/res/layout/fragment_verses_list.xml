<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blueoxgym.javainthedark.Fragments.VersesList">

    <!-- TODO: Update blank fragment layout -->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/versesRecycleView"
            android:layout_width="381dp"
            android:layout_height="318dp"
            android:layout_marginTop="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/levelThreeStar"
            app:layout_constraintHorizontal_bias="0.666"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_mic"></android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/songNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/LightGreen"
            android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/artistTextView"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/LightGreen"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/songNameTextView"
            tools:layout_editor_absoluteX="8dp" />

        <ImageView
            android:id="@+id/levelOneStar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_star_border_white_18dp"
            app:layout_constraintTop_toBottomOf="@+id/artistTextView"
            app:layout_constraintRight_toLeftOf="@+id/levelTwoStar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed" />
        <ImageView
            android:id="@+id/levelTwoStar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_star_border_white_18dp"
            app:layout_constraintTop_toBottomOf="@+id/artistTextView"
            app:layout_constraintRight_toLeftOf="@+id/levelThreeStar"
            app:layout_constraintLeft_toRightOf="@+id/levelOneStar" />
        <ImageView
            android:id="@+id/levelThreeStar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_star_border_white_18dp"
            app:layout_constraintTop_toBottomOf="@+id/artistTextView"
            app:layout_constraintRight_toLeftOf="@+id/levelFourStar"
            app:layout_constraintLeft_toRightOf="@+id/levelTwoStar" />
        <ImageView
            android:id="@+id/levelFourStar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_star_border_white_18dp"
            app:layout_constraintTop_toBottomOf="@+id/artistTextView"
            app:layout_constraintRight_toLeftOf="@+id/levelFiveStar"
            app:layout_constraintLeft_toRightOf="@+id/levelThreeStar" />
        <ImageView
            android:id="@+id/levelFiveStar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_star_border_white_18dp"
            app:layout_constraintTop_toBottomOf="@+id/artistTextView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/levelFourStar" />

        <ImageButton
            android:id="@+id/btn_mic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/circle_transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_mic_deep_orange_a700_48dp"

            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="8dp" />

        <ProgressBar
            android:id="@+id/progressBarMic"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/progress_scale_drawable"
            android:progress="25"
            android:layout_width="30dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/btn_mic"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toTopOf="@+id/btn_mic"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_mic"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="76dp"
            app:layout_constraintRight_toRightOf="@+id/btn_mic"
            app:layout_constraintVertical_bias="1.0" />
    </android.support.constraint.ConstraintLayout>

</FrameLayout>
